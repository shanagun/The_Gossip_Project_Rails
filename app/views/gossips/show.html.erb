<br/>

<center>
 <div class="card border-secondary mb-6" style="max-width: 50rem;">
  <div class="card-header">---- Gossip n°<%= @gossip.id %> ----</div>
    <div class="card-block">
      <p class="card-text">Titre : <%= @gossip.title %></p>
      <p class="card-text">Contenu : <%= @gossip.content %></p>
      <p class="card-text">Crée le : <%= @gossip.created_at %></p>
      <p class="card-text">Publié par : <%= link_to @gossip.user.first_name, user_path(:id => @gossip.user_id ) %></p>
      <%= link_to "Modifier", edit_gossip_path, :class => "btn btn-sm btn-outline-secondary" %>
      <%= link_to "Supprimer", gossip_path, :class => "btn btn-sm btn-outline-secondary btn-danger", :data => {:confirm => "Êtes-vous sur?(e)"}, :method => :DELETE %>
      </div>
  </div>
</center>


<!-- DISPLAY DES COMMENTAIRES -->
<h3 class='text-center mt-5 mb-3'>Commentaires</h3>
<h1 class='text-center mt-2 mb-2'><%= link_to "Ajouter un commentaire", new_gossip_comment_path(@gossip.id), class: 'btn btn-secondary' %></h1>
<div class='container-list'>
	<div class="row">
		<% @comments.each do |comment| %>
			<div class="col-4 col-sm-4 col-md-4 col-lg-4 mt-5 text-center" style="width: 18rem">
			  <div class="card-body">
			    <h5 class="card-title">Commentaire de <%= link_to comment.user.first_name , users_path(:id => comment.user.id)%><fieldset></fieldset></h5>
					<p class="card-title"><%= comment.content %></p>
					<p class="card-title"><%= comment.created_at %></p>
			    <%= link_to "Modifier", edit_gossip_comment_path(@gossip.id, comment.id), class: 'btn btn-secondary' %>
			  </div>
			</div>
		<%end%>
	</div>
</div>